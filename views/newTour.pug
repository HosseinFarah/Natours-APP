extends base

block content
    style.
        p.hidden {
            visibility: hidden;
        }
    .container
        h1 Create New Tour
        form.form.form-new-tour(action='/tours', method='POST' enctype='multipart/form-data')
            .form-group
                label.form__label(for='imageCover') Tour Cover Image:
                input.form__upload(type="file" name="imageCover" accept='image/*' required)
            
            .form-group
                label.form__label(for='images') Additional Images (Up to 3):
                input.form__upload(type="file" name="images[0]" accept='image/*')
                input.form__upload(type="file" name="images[1]" accept='image/*')
                input.form__upload(type="file" name="images[2]" accept='image/*')
            
            .form-group
                label.form__label(for='name') Name:
                input.form__input#name(type='text' name='name' required)
            
            .form-group
                label.form__label(for='duration') Duration (days):
                input.form__input#duration(type='number' name='duration' required)
            
            .form-group
                label.form__label(for='maxGroupSize') Max Group Size:
                input.form__input#maxGroupSize(type='number' name='maxGroupSize' required)
            
            .form-group
                label.form__label(for='difficulty') Difficulty:
                select.form__input#difficulty(name='difficulty' required)
                    option(value='easy') Easy
                    option(value='medium') Medium
                    option(value='difficult') Difficult
            
            .form-group
                label.form__label(for='price') Price:
                input.form__input#price(type='number' name='price' required)
            
            .form-group
                label.form__label(for='summary') Summary:
                textarea.form__textarea#summary(name='summary' rows='5' required)
            
            .form-group
                label.form__label(for='description') Description:
                textarea.form__textarea#description(name='description' rows='10')
            
            .form-group
                label.form__label(for='startLocation.description') Start Location Description:
                input.form__input#startLocationDescription(type='text' name='startLocation.description' required)
            
            .form-group
                label.form__label(for='startLocation.coordinates') Start Location Coordinates (Latitude, Longitude):
                input.form__input#startLocationCoordinates(type='text' name='startLocation.coordinates' required)
            
            .form-group
                label.form__label(for='startLocation.address') Start Location Address:
                input.form__input#startLocationAddress(type='text' name='startLocation.address' required)
            
            .form-group
                label.form__label(for='startDates') Start Dates:
                input.form__input(type='date' name='startDates' required)
            
            .form-group
                .locations-container
                    label.form__label(for='locations[0].description') Location 1 Description:
                    input.form__input#locationDescription0(type='text' name='locations[0].description' required)
                    
                    label.form__label(for='locations[0].coordinates') Location 1 Coordinates (Latitude, Longitude):
                    input.form__input#locationCoordinates0(type='text' name='locations[0].coordinates' required)
                    
                    label.form__label(for='locations[0].day') Location 1 Day:
                    input.form__input#locationDay0(type='number' name='locations[0].day' required)
                
                    label.form__label(for='locations[1].description') Location 2 Description:
                    input.form__input#locationDescription1(type='text' name='locations[1].description')
                    
                    label.form__label(for='locations[1].coordinates') Location 2 Coordinates (Latitude, Longitude):
                    input.form__input#locationCoordinates1(type='text' name='locations[1].coordinates')
                    
                    label.form__label(for='locations[1].day') Location 2 Day:
                    input.form__input#locationDay1(type='number' name='locations[1].day')
                
                    label.form__label(for='locations[2].description') Location 3 Description:
                    input.form__input#locationDescription2(type='text' name='locations[2].description')
                    
                    label.form__label(for='locations[2].coordinates') Location 3 Coordinates (Latitude, Longitude):
                    input.form__input#locationCoordinates2(type='text' name='locations[2].coordinates')
                    
                    label.form__label(for='locations[2].day') Location 3 Day:
                    input.form__input#locationDay2(type='number' name='locations[2].day')
            
            .btn-group
                button.btn.btn--green(type='submit') Save
                a.btn.btn--white(href='/manage-tours') Cancel
